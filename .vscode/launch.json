{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug NestJS Backend",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/backend/src/main.ts",
      "runtimeArgs": ["-r", "ts-node/register"],
      "cwd": "${workspaceFolder}/backend",
      "protocol": "inspector",
      "runtimeExecutable": "node",
      "outFiles": ["${workspaceFolder}/**/*.js"]
    }
  ]
}
